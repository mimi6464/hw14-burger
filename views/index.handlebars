 {{!-- Create a button in `index.handlebars` that will submit the user input into the database.
 --}}

 <header align="center">
  <br><br>
    <img src="/assets/css/img/bleu-burger.jpg" height="200px" width="200px">
  </header>
<body>
  <div class="text-center">
    <h1 class="rowhead">Eat-Da-BURGER!</h1>
      <h3 class="rowhead">What will it Be!!</h3>
    <hr>
 <div class="container">
    <div class="row">
      <div class="col-xs-offset-3 col-xs-6">
        <form method="POST" action="/add" class="button-size">
          <button type="submit" class="btn btn-info btn-sm">Submit It!</button>
        </form>
    </div>
  </div>
 </div>
</body>
{{!--  --}}
<div class="container">
  <div class="row">
    <div class="col-xs-6 text-center">
      <div class="row">
{{!--  --}}
  {{#each burgers}}
  {{#unless this.devoured}}
    <div class="col-xs-7 text-center">
      <h5> {{this.burger_name}}</h5>
   </div>
      <div class="col-xs-3 text-center">
        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" id="toEat" name="devoured" value="true">
            <button class="btn btn-default btn-lg" type="submit">DEVORED</button>
        </form>
    </div>
 </div>  
  {{/unless}}
  {{/each}}
  </div>
</div>
  {{!--  --}}
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <div class="panel panel-default">
        <ul class="list-group">
        {{#each burgers}}
          {{#if this.devoured}}
          <li class="list-group-item">
            <h5 class="lead">{{this.burger_name}} </h5>
            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" id="toEat" name="devoured" value="false">
                <button class="btn btn-default btn-lg" type="submit">I AM FULL </button>
            </form>
        </li>
  {{/if}}
  {{/each}}
        </ul>
      </div>
  </div>
</div>
    <div class="col-md-10 col-md-offset-1">
        <p class="lead">Click submit to add new item to eat. </p>
          <form class="create-update-form" action="burgers/create" method="POST">
            <div class="form-group">
                <textarea class="form-control input-lg" type="text" name="b_name" rows="3"> </textarea>
              </div>
            <button class="btn btn-default btn-lg" type="submit">Add Burger!</button>
        </form>
    </div>
</div>

    


